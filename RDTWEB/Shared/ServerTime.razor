<p>Server Time: @CurrentTime</p>

@code {

    private DateTime CurrentTime { get; set; } = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await InvokeAsync(async () =>
        {
            try
            {
                while (true)
                {
                    CurrentTime = DateTime.Now;
                    StateHasChanged();
                    await Task.Delay(1000);
                }
            }
            catch (Exception)
            {
    // ignored
            }
        });
    }

}