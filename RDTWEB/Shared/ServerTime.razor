<p>Server Time: @CurrentTime</p>

@code {
    public DateTime CurrentTime { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        InvokeAsync(async () =>
        {
            while (true)
            {
                CurrentTime = DateTime.Now;
                StateHasChanged();
                await Task.Delay(1000);
            }
        });
    }

}
