<p>Server Time: @CurrentTime</p>

@code {
    private DateTime CurrentTime { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        InvokeAsync(async () =>
        {
            try
            {
                while (true)
                {
                    CurrentTime = DateTime.Now;
                    StateHasChanged();
                    await Task.Delay(1000);
                }
            }
            catch (Exception)
            {
                // ignored
            }
        });
    }

}