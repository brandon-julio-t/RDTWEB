@page "/TestResults"

@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using RDTWEB.Models

@attribute [Authorize(Roles = "Admin, Participant")]

@inject ApplicationDbContext _context
@inject AuthenticationStateProvider _authenticationStateProvider
@inject UserManager<IdentityUser> _userManager

<h3>Test Result</h3>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Start At</th>
            <th>End At</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var set in QuestionSets)
        {
            <tr class="@GetTrClassByStatus(set) ">
                <td class="align-middle">@set.Title</td>
                <td class="align-middle">@set.StartAt?.ToString("U")</td>
                <td class="align-middle">@set.EndAt?.ToString("U")</td>
                <td class="align-middle">@set.Status</td>
                <td class="align-middle">
                    <NavLink href="@($"/TestResults/{set.Id}")" class="btn btn-primary">View Result</NavLink>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@code {
    private List<QuestionSet> QuestionSets { get; set; }

    protected override async Task<Task> OnInitializedAsync()
    {
        var auth = await _authenticationStateProvider.GetAuthenticationStateAsync();
        var userId = _userManager.GetUserId(auth.User);

        const string sql = @"
            select distinct qs.*
            from Answers a
                join Questions q on a.QuestionId = q.Id
                join QuestionSets qs on q.QuestionSetId = qs.Id
            where a.UserId = {0}
";

        QuestionSets = _context.QuestionSets
            .FromSqlRaw(sql, userId)
            .ToList();

        return base.OnInitializedAsync();
    }

    private static string GetTrClassByStatus(QuestionSet questionSet)
    {
        return questionSet.Status switch { "Ongoing" => "bg-success text-white", _ => "" };
    }

}