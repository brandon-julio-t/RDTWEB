@page "/"

<ServerTime/>

<AuthorizeView Roles="Admin">
    <MudText Class="my-4" Typo="Typo.h2">Admin</MudText>

    <MudGrid>
        <MudItem xs="3">
            <MudButton Class="p-4" Link="ManageParticipants" Variant="Variant.Filled" Size="Size.Large" FullWidth="true">
                Manage Participants
            </MudButton>
        </MudItem>
        <MudItem xs="3">
            <MudButton Class="p-4" Link="ManageQuestions" Variant="Variant.Filled" Size="Size.Large" FullWidth="true">
                Manage Questions
            </MudButton>
        </MudItem>
        <MudItem xs="3">
            <MudButton Class="p-4" Link="ManageSchedules" Variant="Variant.Filled" Size="Size.Large" FullWidth="true">
                Manage Schedules
            </MudButton>
        </MudItem>
        <MudItem xs="3">
            <MudButton Class="p-4" Link="AnswersCorrection" Variant="Variant.Filled" Size="Size.Large" FullWidth="true">
                Answers Correction
            </MudButton>
        </MudItem>
    </MudGrid>

    <MudText Class="my-4" Typo="Typo.h2">Participants</MudText>
</AuthorizeView>

<AuthorizeView Roles="Admin, Participant">
    <Authorized>
        <MudGrid>
            <MudItem xs="6">
                <MudButton Class="p-4" Link="TestSchedules" Variant="Variant.Filled" Size="Size.Large" FullWidth="true">
                    Test Schedules
                </MudButton>
            </MudItem>
            <MudItem xs="6">
                <MudButton Class="p-4" Link="TestResults" Variant="Variant.Filled" Size="Size.Large" FullWidth="true">
                    Test Results
                </MudButton>
            </MudItem>
        </MudGrid>
    </Authorized>

    <NotAuthorized>
        <MudGrid>
            <MudItem xs="12">
                <MudButton Class="p-4" Link="Identity/Account/Login" Variant="Variant.Filled" Size="Size.Large" FullWidth="true">
                    Login
                </MudButton>
            </MudItem>
        </MudGrid>
    </NotAuthorized>
</AuthorizeView>